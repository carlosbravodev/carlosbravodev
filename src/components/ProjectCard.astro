---
interface Tag {
  label: string;
  colorClass: string;
}

interface Props {
  title: string;
  description: string;
  tags: Tag[];
  colorClass: string;
  demoLink?: string;
  repoLink?: string;
}

const {
  title,
  description,
  tags,
  colorClass,
  demoLink = "#",
  repoLink = "#",
} = Astro.props;
---

<article
  class:list={[
    colorClass,
    "gsap-project-card border-4 border-black rounded-2xl p-0 shadow-[12px_12px_0px_0px_rgba(0,0,0,1)] hover:shadow-[16px_16px_0px_0px_rgba(0,0,0,1)] hover:-translate-y-1 transition-all duration-300 flex flex-col group",
  ]}
>
  <!-- Mockup / Image Area -->
  <div
    class="h-64 sm:h-80 w-full border-b-4 border-black relative overflow-hidden group"
  >
    <slot />
  </div>

  <!-- Content -->
  <div class="p-6 md:p-8 flex flex-col h-full bg-white rounded-b-xl">
    <h3 class="text-3xl font-black mb-3">{title}</h3>
    <p class="text-lg font-medium leading-relaxed mb-6">
      {description}
    </p>

    <!-- Tags -->
    <div class="flex flex-wrap gap-2 mb-8">
      {
        tags.map((tag) => (
          <span
            class:list={[
              tag.colorClass,
              "px-3 py-1 border-2 border-black rounded-lg font-bold text-sm shadow-[2px_2px_0px_0px_rgba(0,0,0,1)]",
            ]}
          >
            {tag.label}
          </span>
        ))
      }
    </div>

    <!-- Links -->
    <div class="mt-auto flex gap-4">
      <a
        href={demoLink}
        class="flex-1 bg-black text-white italic text-center py-3 rounded-xl border-4 border-black font-black hover:bg-gray-900 hover:shadow-[4px_4px_0px_0px_rgba(128,128,128,1)] transition-all"
      >
        Live Demo
      </a>
      <a
        href={repoLink}
        class="flex-1 bg-white text-black text-center py-3 rounded-xl border-4 border-black font-black hover:bg-gray-100 hover:shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] transition-all"
      >
        GitHub
      </a>
    </div>
  </div>
</article>
