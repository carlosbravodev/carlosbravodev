---
import Image from "astro/components/Image.astro";
import carlosBravoDev from "../assets/carlosbravodev.png";
---

<section
  id="hero-section"
  class="min-h-screen flex items-center justify-center px-8 sm:px-8 lg:px-16 pt-32 pb-12 lg:pt-40 lg:pb-32 font-brico overflow-hidden"
>
  <div
    class="container mx-auto grid grid-cols-1 sm:grid-cols-2 gap-10 lg:gap-16 items-center"
  >
    <!-- Text Content -->
    <div
      class="space-y-6 md:space-y-8 order-1 relative z-10 w-full text-center"
    >
      <!-- Main Title Box -->
      <div
        class="hero-text-box inline-block bg-white border-4 border-black rounded-xl md:rounded-2xl px-6 py-4 md:px-8 md:py-6 lg:px-10 lg:py-8 shadow-[6px_6px_0px_0px_rgba(0,0,0,1)] md:shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] hover:shadow-[10px_10px_0px_0px_rgba(0,0,0,1)] lg:hover:shadow-[12px_12px_0px_0px_rgba(0,0,0,1)] transition-shadow duration-300 transform -rotate-1 hover:rotate-0"
      >
        <h1
          class="text-4xl lg:text-5xl xl:text-6xl font-black text-black leading-[1.1]"
        >
          Hello my<br />name is<br />Carlos Bravo
        </h1>
      </div>

      <!-- Neobrutalism Badge -->
      <div class="block">
        <div
          class="hero-badge-box inline-block bg-purple-400 border-4 border-black rounded-xl md:rounded-2xl px-8 py-3 md:px-10 md:py-5 lg:py-6 shadow-[6px_6px_0px_0px_rgba(0,0,0,1)] md:shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] hover:shadow-[10px_10px_0px_0px_rgba(0,0,0,1)] lg:hover:shadow-[12px_12px_0px_0px_rgba(0,0,0,1)] transition-shadow duration-300 transform rotate-1 hover:rotate-0"
        >
          <h2
            class="text-3xl md:text-2xl lg:text-4xl xl:text-5xl font-black text-black"
          >
            Full-stack Developer
          </h2>
          <div
            class="absolute top-0 -left-8 lg:-left-12 w-12 h-12 md:w-16 md:h-16 lg:w-20 lg:h-20 bg-yellow-400 border-4 border-black rounded-full flex items-center justify-center shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] animate-spin-slow shrink-0"
          >
            <svg
              class="w-8 h-8 md:w-10 md:h-10 lg:w-12 lg:h-12"
              viewBox="0 0 24 24"
              fill="none"
              stroke="black"
              stroke-width="3"
            >
              <path
                d="M12 2L15 9L22 12L15 15L12 22L9 15L2 12L9 9L12 2Z"
                fill="orange"></path>
            </svg>
          </div>
        </div>
      </div>

      <!-- CTA Buttons -->
      <div class="hero-cta gap-4 pt-4 md:pt-6 text-center">
        <a
          href="#projects"
          class="inline-block text-center bg-black text-white border-4 border-white rounded-xl px-6 py-4 max-w-52 lg:max-w-72 lg:px-10 lg:py-4 font-black text-lg sm:text-sm md:text-xl lg:text-2xl shadow-[6px_6px_0px_0px_rgba(0,0,0,1)] hover:shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] lg:hover:shadow-[10px_10px_0px_0px_rgba(0,0,0,1)] hover:translate-x-[-2px] hover:translate-y-[-2px] lg:hover:translate-x-[-4px] lg:hover:translate-y-[-4px] transition-all duration-200"
        >
          DOWNLOAD CV
        </a>
      </div>
    </div>

    <!-- Image Card -->
    <div class="order-2 flex justify-center lg:justify-end w-full relative z-0">
      <div
        class="hero-image-card relative bg-gray-100 border-4 border-black rounded-2xl p-4 md:p-6 shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] lg:shadow-[12px_12px_0px_0px_rgba(0,0,0,1)] transform rotate-2 hover:rotate-1 transition-transform duration-300 w-full max-w-sm md:max-w-md lg:max-w-lg mx-auto lg:mx-0"
      >
        <!-- Profile Image -->
        <div
          class="bg-lime-300 border-4 border-black rounded-xl overflow-hidden shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] aspect-square lg:aspect-auto"
        >
          <Image
            src={carlosBravoDev}
            alt="Carlos Bravo Dev"
            class="w-full h-full object-cover"
          />
        </div>

        <!-- Username Badge -->
        <div
          class="mt-4 md:mt-6 bg-white border-4 border-black rounded-xl px-4 py-3 md:px-6 md:py-4 text-center shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]"
        >
          <p class="text-xl md:text-2xl lg:text-3xl font-black text-black">
            @carlosbravodev
          </p>
        </div>

        <!-- Decorative Star Top Right -->
        <div
          class="absolute -top-4 -right-4 md:-top-6 md:-right-6 w-12 h-12 md:w-16 md:h-16 lg:w-20 lg:h-20 bg-red-500 border-4 border-black rounded-full flex items-center justify-center shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] animate-bounce-slow"
        >
          <svg
            class="w-6 h-6 md:w-10 md:h-10 lg:w-12 lg:h-12"
            viewBox="0 0 24 24"
            fill="none"
            stroke="black"
            stroke-width="3"
          >
            <path
              d="M12 2L15 9L22 12L15 15L12 22L9 15L2 12L9 9L12 2Z"
              fill="orange"></path>
          </svg>
        </div>
      </div>
    </div>
  </div>
</section>
