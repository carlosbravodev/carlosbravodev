<section
  id="contact"
  class="py-20 px-6 font-brico bg-black border-t-4 border-white relative"
>
  <div class="container mx-auto">
    <!-- CTA Card -->
    <div
      class="gsap-contact-card bg-cyan-400 border-4 border-b-8 border-white rounded-3xl p-8 md:p-12 relative overflow-hidden flex flex-col md:flex-row items-center justify-between gap-10"
    >
      <!-- Background Pattern -->
      <div class="absolute inset-0 pattern-grid opacity-10 pointer-events-none">
      </div>

      <!-- Content Left -->
      <div class="relative z-10 max-w-2xl">
        <!-- Badge -->
        <div class="mb-4 inline-block transform -rotate-2">
          <span
            class="bg-pink-400 border-4 border-black px-4 py-1 rounded-full font-black text-sm uppercase shadow-[2px_2px_0px_0px_rgba(0,0,0,1)]"
          >
            Status: Available
          </span>
        </div>

        <h2 class="text-4xl md:text-6xl font-black mb-4 leading-none uppercase">
          Let's Work Together
        </h2>

        <p class="text-xl font-bold leading-relaxed">
          Have a project in mind? Let's build something epic.
        </p>
      </div>

      <!-- Button Right -->
      <div class="relative z-10 shrink-0">
        <a
          href="mailto:hello@carlosbravodev.com"
          class="inline-flex items-center gap-3 bg-white text-black text-xl md:text-2xl font-black px-8 py-5 rounded-xl border-4 border-black shadow-[6px_6px_0px_0px_rgba(0,0,0,1)] hover:shadow-[10px_10px_0px_0px_rgba(0,0,0,1)] hover:-translate-y-1 hover:bg-yellow-300 transition-all duration-300 group"
        >
          <span>SAY HELLO</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="3"
            stroke="currentColor"
            class="size-6 group-hover:rotate-45 transition-transform duration-300"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M4.5 19.5 19.5 4.5M19.5 4.5H8.25M19.5 4.5v11.25"></path>
          </svg>
        </a>
      </div>

      <!-- Decorative shapes - Compact versions -->
      <div
        class="absolute -bottom-10 right-1/3 w-32 h-32 bg-orange-400 rounded-full border-4 border-black z-0 opacity-50"
      >
      </div>
      <div
        class="absolute -top-10 -right-10 w-40 h-40 bg-blue-500 rotate-12 border-4 border-black z-0 opacity-50"
      >
      </div>
    </div>
  </div>
</section>

<style>
  .pattern-grid {
    background-image:
      linear-gradient(#000 2px, transparent 2px),
      linear-gradient(90deg, #000 2px, transparent 2px);
    background-size: 40px 40px;
  }
</style>
