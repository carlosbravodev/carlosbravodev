---
import ProjectCard from "./ProjectCard.astro";
---

<section
  id="projects"
  class="min-h-screen py-20 px-6 font-brico bg-white border-t-4 border-black relative overflow-hidden"
>
  <!-- Decorative Background Pattern -->
  <div class="absolute inset-0 pattern-grid opacity-10 pointer-events-none">
  </div>

  <div class="container mx-auto relative z-10">
    <!-- Section Title -->
    <div class="flex justify-center mb-20">
      <div
        class="inline-block bg-lime-300 border-4 border-black rounded-2xl px-12 py-5 shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] transform rotate-2 hover:rotate-0 transition-transform duration-300"
      >
        <h2 class="text-4xl md:text-6xl font-black text-black">
          Selected Projects
        </h2>
      </div>
    </div>

    <!-- Projects Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 lg:gap-16">
      <!-- Project 1 -->
      <ProjectCard
        title="Project Alpha"
        description="A high-performance SaaS platform built for creators. Features real-time analytics, collaborative workspaces, and automated workflows."
        colorClass="bg-purple-400"
        tags={[
          { label: "React", colorClass: "bg-yellow-300" },
          { label: "TypeScript", colorClass: "bg-blue-300" },
          { label: "Tailwind", colorClass: "bg-red-300" },
        ]}
      >
        <div class="h-full w-full bg-gray-900 group">
          <!-- Overlay Content (Mockup Placeholder) -->
          <div
            class="absolute inset-0 flex items-center justify-center group-hover:scale-105 transition-transform duration-500"
          >
            <span class="text-6xl">ðŸš€</span>
          </div>
          <div class="absolute top-4 right-4 animate-bounce-slow">
            <span
              class="bg-white border-2 border-black px-3 py-1 font-bold rounded-lg shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] transform rotate-3 text-sm"
              >New</span
            >
          </div>
        </div>
      </ProjectCard>

      <!-- Project 2 -->
      <ProjectCard
        title="Neon Portfolio"
        description="A minimalistic yet bold portfolio template designed for designers. Focus on large typography and micro-interactions."
        colorClass="bg-blue-400"
        tags={[
          { label: "Astro", colorClass: "bg-purple-300" },
          { label: "CSS3", colorClass: "bg-green-300" },
        ]}
      >
        <div
          class="h-full w-full bg-white flex items-center justify-center pattern-dots"
        >
          <div
            class="w-32 h-32 rounded-full border-4 border-black bg-pink-400 flex items-center justify-center shadow-[6px_6px_0px_0px_rgba(0,0,0,1)]"
          >
            <span class="text-5xl">ðŸŽ¨</span>
          </div>
        </div>
      </ProjectCard>

      <!-- Project 3 -->
      <ProjectCard
        title="Bot Commander"
        description="Discord bot dashboard to manage communities. Includes moderation logs, music controls, and automated welcome messages."
        colorClass="bg-yellow-400"
        tags={[
          { label: "Node.js", colorClass: "bg-orange-300" },
          { label: "MongoDB", colorClass: "bg-indigo-300" },
          { label: "Discord.js", colorClass: "bg-gray-200" },
        ]}
      >
        <div
          class="h-full w-full bg-black flex items-center justify-center relative overflow-hidden"
        >
          <div
            class="text-white text-9xl font-black opacity-20 rotate-12 absolute scale-150"
          >
            API
          </div>
          <span class="text-6xl relative z-10">ðŸ¤–</span>
        </div>
      </ProjectCard>

      <!-- Project 4 -->
      <ProjectCard
        title="Urban Store"
        description="Complete e-commerce solution with cart, checkout, and inventory management. Integrated with Stripe for payments."
        colorClass="bg-red-400"
        tags={[
          { label: "Next.js", colorClass: "bg-teal-300" },
          { label: "Stripe", colorClass: "bg-pink-300" },
          { label: "Prisma", colorClass: "bg-cyan-300" },
        ]}
      >
        <div
          class="h-full w-full bg-lime-200 flex items-center justify-center relative overflow-hidden"
        >
          <!-- Abstract shapes -->
          <div
            class="absolute w-full h-full bg-[radial-gradient(circle,_black_1px,_transparent_1px)] bg-[length:20px_20px] opacity-20"
          >
          </div>
          <div
            class="w-40 h-10 bg-white border-4 border-black transform -rotate-6 shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] flex items-center justify-center font-black"
          >
            E-COMM
          </div>
        </div>
      </ProjectCard>
    </div>
  </div>
</section>

<style>
  .pattern-grid {
    background-image:
      linear-gradient(#000 1px, transparent 1px),
      linear-gradient(90deg, #000 1px, transparent 1px);
    background-size: 40px 40px;
  }
  .pattern-dots {
    background-image: radial-gradient(circle, #000 2px, transparent 2.5px);
    background-size: 20px 20px;
  }
</style>
